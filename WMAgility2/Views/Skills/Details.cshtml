@model WMAgility2.Models.ViewModels.SkillViewModel

<div class="">
    <form method="post">
        <div class="container backgroundWhite pt-4">
            <div class="card" style="border:1px solid #000000; ">
                <div class="card-header bg-dark text-light ml-0 row container" style="border-radius: 0px;">
                    <div class="col-12 col-md-6">
                        <h1 class="text-white">@Model.Skill.Name</h1>
                    </div>
                    <div class="col-12 col-md-6 text-md-right">
                        <h1 class="text-white"> @Model.Skill.Description</h1>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-4 p-1 text-center">
                                <img src="@WebConstants.ImagePath@Model.Skill.Image" width="100%" class="rounded" />
                            </div>
                            <div class="col-12 col-lg-8">
                                <div class="row pl-3">

                                    <div class="col-12">
                                        <span class="badge p-3 border" style="background-color:lavenderblush">@Model.Skill.Name</span>
                                        <h3 class="text-success"></h3>

                                        <p class="text-secondary">@Html.Raw(Model.Skill.Name) &nbsp;@Html.Raw(Model.Skill.IKC)</p>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-dark">
                    <div class="row">
                        <div class="col-12 col-md-2 pb-1 ">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-square form-control btn-lg" style="height:50px;">Back</a>
                        </div>
                        <div class="col-12 col-md-5 ">
                            <a asp-controller="Practices" asp-action="Create" asp-route-id="@Model.Skill.Id" class="btn btn-success btn-square form-control btn-lg" style="height:50px;">Practice Skill</a>
                        </div>
                        <div class="col-12 col-md-5 ">
                            <a asp-controller="Practices" asp-action="History" asp-route-id="@Model.Skill.Id" class="btn btn-success btn-square form-control btn-lg" style="height:50px;">Skill History</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>