@model WMAgility2.Models.ViewModels.SkillHistoryViewModel

<div class="">
    <form method="post">
        <div class="container backgroundWhite pt-4">
            <div class="card" style="border:1px solid #000000; ">
                <div class="card-header bg-dark text-light ml-0 row container" style="border-radius: 0px;">
                    <div class="col-12 col-md-6">
                        <h1 class="text-white">@Model.Skill.Name</h1>
                    </div>
                    <div class="col-12 col-md-6 text-md-right">
                        <h1 class="text-white"> @Model.Skill.Description</h1>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Date)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Rounds)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Score)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Notes)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Dog)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.shvm)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Date)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Rounds)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Score)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Notes)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Dog.DogName)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="card-footer bg-dark">
                    <div class="row">
                        <div class="col-12 col-md-2 pb-1 ">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-square form-control btn-lg" style="height:50px;">Back</a>
                        </div>
                        <div class="col-12 col-md-5 ">
                            <a asp-controller="Practices" asp-action="Create" asp-route-id="@Model.Skill.Id" class="btn btn-success btn-square form-control btn-lg" style="height:50px;">Practice Skill</a>
                        </div>
                        <div class="col-12 col-md-5 ">
                            <a asp-controller="Practices" asp-action="Index" asp-route-id="@Model.Skill.Id" class="btn btn-success btn-square form-control btn-lg" style="height:50px;">Skill History</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>