@model IEnumerable<WMAgility2.Models.Competition>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<a asp-controller="Competitions" asp-action="CompetitionForm" class="btn btn-primary form-control btn-sm p-2" style="width:250px">Download Competition Form</a>
&nbsp;
<a asp-action="Create" class="btn btn-primary form-control btn-sm p-2" style="width:250px">Create New</a>
&nbsp;

<form method="get" asp-action="Index">
    <p>
        <input type="search" placeholder="Enter Competition name..." value="@ViewData["GetCompDetails"]" name="CompSearch"
               style="width:500px;" />
        <input type="submit" value="Search" class="btn btn-primary" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CompName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Length)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surface)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Placement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompFaults)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dog)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CompName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Length)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surface)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Placement)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompFaults)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dog.DogName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CompId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.CompId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
