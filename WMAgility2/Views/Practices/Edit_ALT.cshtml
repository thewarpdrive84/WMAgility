@model WMAgility2.Models.ViewModels.PracticeViewModel

@{
    var availableDogsSelectListItems = Model.AvailableDogs
        .Select(x => new SelectListItem
        {
            Text = x.Value.ToString(),
            Value = x.Key.ToString()
        });
}

@{
    var allSkillsSelectListItems = Model.AvailableSkills
        .Select(s => new SelectListItem
        {
            Text = s.Value.ToString(),
            Value = s.Key.ToString()
        });
}


@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Practice</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="DogId" class="control-label"></label>
                <select class="form-control" asp-for="DogId"
                        asp-items="availableDogsSelectListItems">
                    <option value="">- select -</option>
                </select>
                <span class="form-text" asp-validation-for="DogId"></span>
            </div>

            <div class="form-group">
                <label asp-for="SkillId" class="control-label">Skill</label>
                <select class="form-control" asp-for="SkillId"
                        asp-items="allSkillsSelectListItems">
                    <option value="">- select -</option>
                </select>
                <span class="form-text" asp-validation-for="SkillId"></span>
            </div>


            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rounds" class="control-label"></label>
                <input asp-for="Rounds" class="form-control" />
                <span asp-validation-for="Rounds" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Score" class="control-label"></label>
                <input asp-for="Score" class="form-control" />
                <span asp-validation-for="Score" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
