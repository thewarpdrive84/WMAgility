@model Email
@{
    ViewData["Title"] = "SendGridEmail";
}

<h1>Send Event Notification for @ViewBag.CurrentUsers</h1>
<hr />

<form asp-action="SendGridEmail" asp-controller="Admin" method="post">
    <div class="row">
        <div class="col-md-4">

            <div asp-controller="Team" method="post" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EventName" class="control-label">Opponent</label>
                <input asp-for="EventName" class="form-control" />
                <span asp-validation-for="EventName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventDetails" class="control-label">Opponent</label>
                <input asp-for="EventDetails" class="form-control" />
                <span asp-validation-for="EventDetails" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventLocation" class="control-label">Meet Location</label>
                <input asp-for="EventLocation" class="form-control" />
                <span asp-validation-for="EventLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventDate" class="control-label">Meet Time</label>
                <input asp-for="EventDate" class="form-control" />
                <span asp-validation-for="EventDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventTime" class="control-label">Kick Off</label>
                <input asp-for="EventTime" class="form-control" />
                <span asp-validation-for="EventTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Send Email" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>  