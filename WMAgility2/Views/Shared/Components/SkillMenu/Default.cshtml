@model IEnumerable<Skill>

<li class="dropdown">
    <a asp-controller="Skills"
       asp-action="Index"
       class="dropdown" data-toggle="dropdown">Skills<b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach (var skill in Model)
        {
            <li>
                <a asp-controller="Skills" asp-action="SkillsList"
                   asp-route-id="@skill.Id">@skill.Name</a>
            </li>
        }
        <li class="divider"></li>
        <li>
            <a asp-controller="Skills" asp-action="Index" asp-route-Category="">All Skills</a>
        </li>
    </ul>
</li>
